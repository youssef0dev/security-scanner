# مفتاح التطبيق السري
SECRET_KEY=your-secret-key-here

# إعدادات Flask
FLASK_ENV=development
FLASK_DEBUG=1

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///app.db

# إعدادات البريد الإلكتروني
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-password
ADMIN_EMAIL=admin@example.com

# إعدادات المراقبة
DEFAULT_CHECK_INTERVAL=24  # ساعات
MAX_CHECK_INTERVAL=168     # ساعات (أسبوع)

# إعدادات التقارير
REPORT_TEMPLATE_DIR=reports
REPORT_FONT_PATH=static/fonts/arabic.ttf

# مفتاح API لخدمة Have I Been Pwned
HIBP_API_KEY=your-hibp-api-key

# إعدادات التطبيق
APP_NAME=فاحص أمان المواقع
APP_VERSION=1.0.0
APP_DESCRIPTION=تطبيق لفحص أمان المواقع وتقديم تقارير مفصلة
APP_AUTHOR=Your Name
APP_EMAIL=your.email@example.com
APP_WEBSITE=https://your-website.com 